/* ----------NODE ATTRIBUTE DEFINITIONS---------- */
Node_attributes {
   RLS {
      LIN_protocol               = "2.1";                    /* Node protocol version */
      configured_NAD             = 0x22;                     /* configured NAD of node (1-125) */
      initial_NAD                = 0x22;                     /* initial NAD of node (1-125) */
      product_id                 =   0x66,    0x0,   0xff;   /* Product id */
      response_error             = RLS_ResponseError;        /* Response error signal */
      P2_min                     = 50 ms;                    /* P2_min */
      ST_min                     = 10 ms;                    /* ST_min */
      N_As_timeout               = 1000 ms;                  /* N_As timeout value */
      N_Cr_timeout               = 1000 ms;                  /* N_Cr timeout value */
      configurable_frames {
         BCM_01;
         RLS_01;
         RLS_02;
      }
   }
}
/* ----------SCHEDULE TABLE DEFINITIONS---------- */
Schedule_tables {
   NormalTable {
      BCM_01                              delay 10.0 ms;
      RLS_01                              delay 25.0 ms;
      RLS_02                              delay 10.0 ms;
   }
   DiagReqNormalTable {
      MasterReq                           delay 10.0 ms;
      BCM_01                              delay 10.0 ms;
      RLS_01                              delay 25.0 ms;
      RLS_02                              delay 10.0 ms;
   }
   DiagRespNormalTable {
      SlaveResp                           delay 10.0 ms;
      BCM_01                              delay 10.0 ms;
      RLS_01                              delay 25.0 ms;
      RLS_02                              delay 10.0 ms;
   }
   DiagReqOnly {
      MasterReq                           delay 10.0 ms;
   }
   DiagRespOnly {
      SlaveResp                           delay 10.0 ms;
   }
}

