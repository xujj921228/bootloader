/* ----------NODE ATTRIBUTE DEFINITIONS---------- */
Node_attributes {
   RLS {
      LIN_protocol               = "2.1";                    /* Node protocol version */
      configured_NAD             = 0x22;                     /* configured NAD of node (1-125) */
      initial_NAD                = 0x22;                     /* initial NAD of node (1-125) */
      product_id                 =   0x66,    0x0,   0xff;   /* Product id */
      response_error             = RLS_DiagnnosticReq;       /* Response error signal */
